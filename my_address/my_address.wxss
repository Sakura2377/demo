page {
  margin-top: 14rpx;
  background: #f2f2f2;
}

.more_title {
  padding: 34rpx 4% 22rpx 4%;
  font-size: 34rpx;
  color: rgba(0, 0, 0, 0.9);
  background: #fff;
  display: flex;
  justify-content: space-between;
}

.title_tips {
  font-weight: bold;
  letter-spacing: 4rpx;
}

.more_btn {
  font-size: 28rpx;
  width: 94rpx;
  height: 48rpx;
  border-radius: 24rpx;
  line-height: 48rpx;
  text-align: center;
  background: #336dac;
  color: rgb(255, 255, 255);
}

.modular {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  background: #fff;
}

.modular_left {
  color: rgba(0, 0, 0, 0.9);
}

.modular_left_top {
  display: flex;
  align-items: center;
}

.contact {
  display: flex;
  align-items: center;
