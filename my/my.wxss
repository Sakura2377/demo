/* pages/personal/user/my/my.wxss */

.banner {
  border-top: 14rpx solid #f0f0f0;
  width: 100%;
}

.banner image {
  width: 100%;
  height: 100%;
  display: block;
}

.my_banner {
  width: 750rpx;
  height: 286rpx;
}

.switch {
  width: 94%;
  margin: 40rpx auto 0 auto;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: rgb(255, 255, 255);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}

.switch_text {
  padding: 0 8rpx 0 14rpx;
}

.switch_img01 {
  width: 40rpx;
  height: 40rpx;
}

.my_message {
  width: 90%;
  position: absolute;
  top: 100rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  display: flex;
  align-items: center;
}

.my_photo {
  width: 118rpx;
  height: 118rpx;
}

.my_photo image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.my_msg {
  color: rgb(255, 255, 255);
  margin-left: 24rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.info {
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
  font-weight: bold;
}
/* 签到与上报地址 */
.cdBox{
  display: flex;
}
.cd {
  width: 231rpx;
  height: 50rpx;
  border: 1rpx solid rgb(255, 255, 255);
  border-radius: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-weight: bold;
  margin-top: 10rpx;
  margin-right: 20rpx;
}

.cd image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 12rpx;
}
/* 地址图标 */
.cd .cdImg{
  width: 40rpx;
  height: 40rpx;
  margin-right: 0rpx;
}
.nav_title {
  font-size: 32rpx;
  color: rgb(0, 0, 0);
}

.my_name {
  font-size: 36rpx;
  font-weight: bold;
}

.my_tel {
  margin-top: 4rpx;
  font-size: 36rpx;
  margin-left: 10rpx;
}

.tab {
  padding: 56rpx 80rpx 40rpx 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 14rpx solid #f0f0f0;
}

.tab_type {
  text-align: center;
  /* display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center; */
}

.tab_img {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 14rpx;
}

.tab_text {
  width: 100%;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.8);
  text-align: center;
}

.nav_msg {
  padding: 0 5%;
  height: 100rpx;
  border-top: 1px solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.more_btn {
  display: flex;
  align-items: center;
}

.photo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.more {
  width: 42rpx;
  height: 42rpx;
  margin-left: 30rpx;
}

.nav_name {
  font-size: 32rpx;
  color: #a3a3a3;
}

.ewm {
  width: 40rpx;
  height: 40rpx;
}

.question_btn_box {
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.question_btn {
  width: 432rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: white;
  font-size: 32rpx;
  text-align: center;
  border-radius: 50rpx;
  background: rgb(86, 158, 210);
  /* position: fixed; */
  /* bottom: 60rpx;
  left: 0;
  right: 0; */
  letter-spacing: 4rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.integral {
  font-size: 32rpx;
}

.msg_tip {
  width: 36rpx;
  height: 36rpx;
  background: rgba(234, 93, 93, 1);
  border-radius: 50%;
  font-size: 28rpx;
  font-family: Adobe Heiti Std;
  font-weight: normal;
  color: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.gr{
  font-size:26rpx;
  width: 231rpx;
  height: 50rpx;
  border-radius: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-weight: bold;
}
